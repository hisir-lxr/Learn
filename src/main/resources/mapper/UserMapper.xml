<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.mctom.learn.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="online.mctom.learn.entity.User">
            <id property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="userAge" column="user_age" jdbcType="INTEGER"/>
            <result property="userGender" column="user_gender" jdbcType="VARCHAR"/>
            <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
            <result property="userPhone" column="user_phone" jdbcType="VARCHAR"/>
            <result property="userStatus" column="user_status" jdbcType="INTEGER"/>
            <result property="userAccount" column="user_account" jdbcType="VARCHAR"/>
            <result property="userPwd" column="user_pwd" jdbcType="VARCHAR"/>
            <result property="salt" column="salt" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="adminFlag" column="admin_flag" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id,user_name,user_age,
        user_gender,user_email,user_phone,
        user_status,user_account,user_pwd,
        salt,create_time,admin_flag
    </sql>
    <insert id="insertUser" parameterType="user">
        insert into users (user_name, user_age, user_gender, user_email, user_phone,
                           user_status, user_account, user_pwd, salt, create_time)
        values (#{userName}, #{userAge}, #{userGender}, #{userEmail}, #{userPhone}, #{userStatus},
            #{userAccount}, #{userPwd}, #{salt}, #{createTime}
        )
    </insert>
    <insert id="insertCourse">
        insert into user_course
        value (#{userId},#{courseId},#{score})
    </insert>
    <update id="updateUser" parameterType="user">
        UPDATE users
        SET
            user_name = #{userName},
            user_age = #{userAge},
            user_gender = #{userGender},
            user_email = #{userEmail},
            user_phone = #{userPhone},
            user_status = #{userStatus},
            user_account = #{userAccount},
            user_pwd = #{userPwd},
            salt = #{salt},
            create_time = #{createTime},
            admin_flag = #{adminFlag}
        WHERE
            user_id = #{userId}
    </update>
    <delete id="deleteByUserId" parameterType="int">
        delete from users where user_id = #{userId}
    </delete>

    <select id="selectByAccount" resultType="user" parameterType="string">
        select * from Users
        where user_account = #{userAccount}
    </select>
    <select id="selectAll" resultType="online.mctom.learn.entity.User">
        select * from Users

    </select>
    <select id="selectUsersByPage" resultType="online.mctom.learn.entity.User">
        SELECT * FROM users LIMIT #{offset}, #{count}
    </select>
</mapper>
