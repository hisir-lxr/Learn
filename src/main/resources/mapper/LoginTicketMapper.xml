<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.mctom.learn.mapper.LoginTicketMapper">

    <resultMap id="BaseResultMap" type="online.mctom.learn.entity.LoginTicket">
            <id property="loginId" column="login_id" jdbcType="INTEGER"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="ticket" column="ticket" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="INTEGER"/>
            <result property="expired" column="expired" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        login_id,user_id,ticket,
        status,expired
    </sql>
    <insert id="insertLoginTicket" parameterType="loginTicket">
        insert into web.login_tickets (user_id, ticket, status, expired)
        values(#{userId},#{ticket},#{status},#{expired})
    </insert>
    <select id="selectByTicket" resultType="online.mctom.learn.entity.LoginTicket">
        select * from web.login_tickets
        where ticket = #{ticket}
    </select>
</mapper>
