<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.mctom.learn.mapper.ResourceMapper">

    <resultMap id="BaseResultMap" type="online.mctom.learn.entity.Resource">
            <id property="resourceId" column="resource_id" jdbcType="INTEGER"/>
            <result property="sectionId" column="section_id" jdbcType="INTEGER"/>
            <result property="resourceType" column="resource_type" jdbcType="VARCHAR"/>
            <result property="resourceTitle" column="resource_title" jdbcType="VARCHAR"/>
            <result property="resourceContent" column="resource_content" jdbcType="VARCHAR"/>
            <result property="resourceUrl" column="resource_url" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="uploadTime" column="upload_time" jdbcType="TIMESTAMP"/>
            <result property="resourceFlag" column="resource_flag" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        resource_id,section_id,resource_type,
        resource_title,resource_content,resource_url,
        user_id,upload_time,resource_flag
    </sql>
    <insert id="addResource">
        INSERT INTO resources (section_id,resource_type,
                               resource_title,resource_content,resource_url,
                               user_id,upload_time,resource_flag)
        value  (#{sectionId}, #{resourceType}, #{resourceTitle}, #{resourceContent}, #{resourceUrl}, #{userId},
                #{uploadTime}, #{resourceFlag})
    </insert>
    <select id="selectByPage" resultType="online.mctom.learn.entity.Resource">
        select * from resources
        limit #{offset}, #{count}
    </select>
</mapper>
